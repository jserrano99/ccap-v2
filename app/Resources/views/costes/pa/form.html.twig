<script>
    $(document).ready(function () {
        $("#appbundle_pa_oficial").change(function () {
            let valor;
            let recurso;
            $("#procesando").show();
            valor = $("#appbundle_pa_oficial").val();
            recurso = Routing.generate("ajaxCalculaCodigoPa", {"codigo": valor}, true);
            $.ajax({
                type: "POST",
                url: recurso,
                dataType: 'json',
                success: function ok(data) {
                    $('.modal-backdrop').remove();
                    $("#procesando").hide();
                    $("#appbundle_pa_pa").val(data.codigo);
                    $("#appbundle_pa_edificio").val(data.edificio_id);
                },
                error: function err(xhr) {
                    bootbox.alert(xhr);
                }
            });
        });
    });
</script>


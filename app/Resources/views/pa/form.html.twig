
<script>

    $(document).ready(function () {
        $("#appbundle_pa_oficial").change(function () {
            var valor = $("#appbundle_pa_oficial").val();
            var recurso = Routing.generate("ajaxCalculaCodigoPa", {"codigo": valor}, true);
            $.ajax({
                type: "POST",
                url: recurso,
                dataType: 'json',
                success: function (data, status, xhr) {
                    $("#appbundle_pa_pa").val(data.codigo);
                    $("#appbundle_pa_edificio").val(data.edificio);
                    
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr);
                }
            });

        });

    });
</script> 

